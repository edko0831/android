<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LampFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewLamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="151dp"
            android:layout_marginTop="106dp"
            android:layout_marginEnd="152dp"
            android:contentDescription="@string/iv_wc_lamp_name"
            app:layout_constraintBottom_toTopOf="@+id/buttonSet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lamp_off"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/buttonSet"
            style="@android:style/Widget.Button"
            android:layout_width="195dp"
            android:layout_height="48dp"
            android:layout_below="@+id/imageViewLamp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="146dp"
            android:layout_marginEnd="128dp"
            android:background="@color/purple_700"
            android:shadowColor="#EF0E0E"
            android:text="@string/bt_wc_on_name"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@id/imageViewLamp"
            app:layout_constraintStart_toStartOf="@id/textViewTamer"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textViewTamer"
            android:layout_width="152dp"
            android:layout_height="85dp"
            android:layout_below="@+id/buttonSet"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="122dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="138dp"
            android:textAlignment="center"
            android:textColor="#F3DA03"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonSet" />
    </RelativeLayout>


</FrameLayout>