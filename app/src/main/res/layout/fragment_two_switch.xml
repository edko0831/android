<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TwoSwitchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:orientation="vertical">

        <TextView
                android:id="@+id/textView_point"
                style="@style/header_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textAllCaps="false"
                tools:ignore="TextViewEdits" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewLamp1"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:contentDescription="@string/iv_wc_lamp_name"
                app:srcCompat="@drawable/lamp_off"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/imageViewLamp2"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginStart="@dimen/layout_marginTop"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:contentDescription="@string/iv_wc_lamp_name"
                app:srcCompat="@drawable/lamp_off"
                tools:ignore="ImageContrastCheck" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonSet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@null"
                android:contentDescription="@string/bt_wc_off_name"
                app:srcCompat="@mipmap/icons8_off_94_foreground" />

            <ImageButton
                android:id="@+id/imageButtonSet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@null"
                android:contentDescription="@string/bt_wc_off_name"
                app:srcCompat="@mipmap/icons8_off_94_foreground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTamer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_marginEnd="@dimen/ic_clear_margin"
                android:textAlignment="center"
                android:textColor="#F3DA03"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textViewTamer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/ic_clear_margin"
                android:textColor="#F3DA03"
                android:textSize="34sp" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>