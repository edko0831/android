<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge" />
    <style name="MyStyleButtonMain">
        <item name="android:background">@drawable/button_main</item>
    </style>

    <style name="CustomDropDownTilStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="hintTextColor">@color/textColorHint</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">18sp</item>
        <item name="android:colorControlActivated">@color/purple_700</item>


        <item name="boxStrokeColor">@color/purple_700</item>
        <item name="colorControlNormal">@color/textColorHint</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorControlHighlight">@color/purple_200</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
    </style>

    <style name="header_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">#0C0C0C</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#F1F3E7</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/not_text</item>
    </style>
</resources>