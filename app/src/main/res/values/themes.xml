<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyDacha2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/button_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyDacha2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyDacha2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyDacha2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyDacha2.Widget.MaterialComponents.Button" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">@null</item>
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
    </style>

</resources>